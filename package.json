{
  "name": "eagle-eye",
  "version": "0.0.1",
  "description": "",
  "author": "m-mitsuhide",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8k-eagle-eye/eagle-eye.git"
  },
  "bugs": {
    "url": "https://github.com/8k-eagle-eye/eagle-eye/issues"
  },
  "homepage": "https://github.com/8k-eagle-eye/eagle-eye#readme",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "next frontend",
    "dev:server": "nodemon",
    "build": "next build frontend",
    "start": "next start frontend",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,json,jsx,md,ts,tsx,yaml,yml}\"",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "coverage": "codecov"
  },
  "dependencies": {
    "next": "8.1.0",
    "react": "16.8.6",
    "react-bootstrap": "1.0.0-beta.9",
    "react-dom": "16.8.6",
    "reflect-metadata": "0.1.13",
    "styled-components": "4.3.2",
    "tachijs": "0.15.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/next": "8.0.5",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/styled-components": "4.1.16",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "@zeit/next-typescript": "1.1.1",
    "babel-plugin-styled-components": "1.10.6",
    "codecov": "3.5.0",
    "dotenv": "8.0.0",
    "dotenv-webpack": "1.7.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.2.1",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jest": "22.7.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.14.2",
    "eslint-plugin-react-hooks": "1.6.1",
    "eslint-plugin-standard": "4.0.0",
    "fork-ts-checker-webpack-plugin": "1.3.7",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "9.0.2",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.5.2"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@zeit/next-typescript/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-ignore",
      "git add"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "ts-node --require dotenv/config --require tsconfig-paths/register --transpile-only backend/server.ts",
    "ext": "ts",
    "watch": [
      "backend"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "*.yaml",
          "*.yml"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
